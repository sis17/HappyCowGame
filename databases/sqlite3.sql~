CREATE TABLE "actions" ("id" INTEGER PRIMARY KEY  NOT NULL  UNIQUE , "round_id" INTEGER, "phase" INTEGER, "game_user_id" INTEGER, "title" VARCHAR, "description" TEXT);
CREATE TABLE "carddecks" ("id" INTEGER PRIMARY KEY  NOT NULL , "user_id" INTEGER, "rating" INTEGER DEFAULT 5, "name" VARCHAR);
CREATE TABLE "carddecks_cards" ("carddeck_id" INTEGER NOT NULL , "card_id" INTEGER NOT NULL , PRIMARY KEY ("carddeck_id", "card_id"));
CREATE TABLE "cards" ("id" INTEGER PRIMARY KEY  NOT NULL  UNIQUE , "title" VARCHAR, "description" TEXT, "image" VARCHAR, "category" VARCHAR, "rating" INTEGER, "user_id" INTEGER, "points" INTEGER, "uri" VARCHAR);
CREATE TABLE "cows" ("id" INTEGER PRIMARY KEY  NOT NULL ,"ph_marker" FLOAT NOT NULL  DEFAULT (6.5) ,"body_condition" INTEGER NOT NULL  DEFAULT (0) ,"welfare" INTEGER NOT NULL  DEFAULT (0) ,"oligos_marker" INTEGER NOT NULL  DEFAULT (0) ,"muck_marker" INTEGER NOT NULL  DEFAULT (0) ,"disease_id" INTEGER,"weather_id" INTEGER, "pregnancy_id" INTEGER);
CREATE TABLE "events" ("id" INTEGER PRIMARY KEY  NOT NULL ,"title" VARCHAR,"category" VARCHAR DEFAULT (null) ,"image" VARCHAR,"description" TEXT DEFAULT (null) ,"rating" DOUBLE,"user_id" INTEGER, "uri" VARCHAR);
CREATE TABLE "game_cards" ("id" INTEGER PRIMARY KEY  NOT NULL ,"game_id" INTEGER NOT NULL ,"card_id" INTEGER NOT NULL );
CREATE TABLE "game_user_cards" ("id" INTEGER PRIMARY KEY  NOT NULL ,"game_user_id" INTEGER NOT NULL  DEFAULT (null) ,"game_card_id" INTEGER NOT NULL  DEFAULT (null) );
CREATE TABLE "game_users" ("id" INTEGER PRIMARY KEY  NOT NULL ,"score" INTEGER DEFAULT (0) ,"colour" VARCHAR,"user_id" INTEGER NOT NULL ,"game_id" INTEGER NOT NULL , "network" INTEGER DEFAULT 1);
CREATE TABLE "games" ("id" INTEGER PRIMARY KEY  NOT NULL ,"start_time" datetime,"end_time" datetime,"stage" integer,"created_at" datetime,"updated_at" datetime,"name" VARCHAR,"round_id" INTEGER DEFAULT (null) ,"cow_id" INTEGER,"rounds_min" INTEGER,"rounds_max" INTEGER,"carddeck_id" INTEGER,"user_id" INTEGER DEFAULT (null) );
CREATE TABLE "ingredient_cats" ("id" INTEGER PRIMARY KEY  NOT NULL , "game_id" INTEGER NOT NULL , "milk_score" INTEGER NOT NULL  DEFAULT 1, "meat_score" INTEGER NOT NULL  DEFAULT 1, "muck_score" INTEGER NOT NULL  DEFAULT 1, "name" VARCHAR, "description" TEXT);
CREATE TABLE "ingredients" ("id" INTEGER PRIMARY KEY  NOT NULL  UNIQUE , "ration_id" INTEGER NOT NULL , "ingredient_cat_id" INTEGER NOT NULL );
CREATE TABLE "issues" ("id" INTEGER PRIMARY KEY  NOT NULL , "title" VARCHAR, "description" TEXT, "user_id" INTEGER, "status" INTEGER, "resolution" TEXT);
CREATE TABLE "motiles" ("id" INTEGER PRIMARY KEY  NOT NULL , "position_id" INTEGER, "game_id" INTEGER);
CREATE TABLE "moves" ("id" INTEGER PRIMARY KEY  NOT NULL ,"game_user_id" INTEGER NOT NULL ,"round_id" INTEGER NOT NULL ,"ration_id" INTEGER,"dice1" INTEGER,"dice2" INTEGER,"dice3" INTEGER,"selected_die" INTEGER,"movements_left" INTEGER DEFAULT (null) ,"movements_made" INTEGER DEFAULT (0) );
CREATE TABLE "next_positions" ("id" INTEGER PRIMARY KEY  NOT NULL , "position_from_id" INTEGER NOT NULL , "position_to_id" INTEGER NOT NULL );
CREATE TABLE "positions" ("id" INTEGER PRIMARY KEY  NOT NULL  UNIQUE , "area_id" INTEGER, "order" INTEGER, "centre_x" INTEGER, "centre_y" INTEGER);
CREATE TABLE "rations" ("id" INTEGER PRIMARY KEY  NOT NULL ,"position_id" INTEGER NOT NULL ,"game_user_id" INTEGER NOT NULL  DEFAULT (null) , "round_created_id" INTEGER);
CREATE TABLE "round_records" ("id" INTEGER PRIMARY KEY  NOT NULL , "game_user_id" INTEGER, "name" VARCHAR, "value" INTEGER, "round_id" INTEGER);
CREATE TABLE "rounds" ("id" INTEGER PRIMARY KEY  NOT NULL ,"event_id" INTEGER,"number" INTEGER NOT NULL ,"current_phase" INTEGER,"game_user_id" INTEGER, "game_id" INTEGER, "starting_user_id" INTEGER);
CREATE TABLE "schema_migrations" ("version" varchar(255) NOT NULL);
CREATE TABLE "turns" ("id" INTEGER PRIMARY KEY  NOT NULL , "game_user_id" INTEGER, "round_id" INTEGER, "phase" INTEGER, "complete" INTEGER DEFAULT 0, "order" INTEGER);
CREATE TABLE "users" ("id" INTEGER PRIMARY KEY  NOT NULL ,"name" VARCHAR,"colour" VARCHAR,"experience" INTEGER,"password" VARCHAR,"key" VARCHAR DEFAULT (null) ,"email" VARCHAR NOT NULL , "last_logged_in" DATETIME);
CREATE UNIQUE INDEX "unique_schema_migrations" ON "schema_migrations" ("version");
